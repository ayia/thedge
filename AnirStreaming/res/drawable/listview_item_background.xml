<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/listview_item_pressed_background" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/listview_item_focused_background" />
            <stroke android:width="1.0sp" android:color="@color/listview_item_focus_stroke" />
        </shape>
    </item>
</selector>