<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:anytextview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_drawer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:background="@color/orange"
    android:layout_gravity="start"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/anyTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView1"
            android:layout_marginBottom="29dp"
            
            android:inputType="textPersonName"
            android:text="@string/app_name"
            android:textColor="@color/pure_white"
            android:textSize="30dp"
            anytextview:typeface="Timber.ttf" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/anyTextView1"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="32dp"
            android:layout_toLeftOf="@+id/editText1"
            android:src="@drawable/musica" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/anyTextView1"
            android:layout_alignBottom="@+id/anyTextView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="Play Music You Love"
            android:textColor="@color/pure_white"
            android:textSize="15dp"
            anytextview:typeface="Timber.ttf" />

    </RelativeLayout>

</LinearLayout>