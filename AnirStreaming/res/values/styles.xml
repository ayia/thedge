<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Base.Theme.AppCompat">
        <item name="android:windowBackground">@color/pure_white</item>
        <item name="android:actionModeBackground">@color/orange</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:buttonStyle">@style/ButtonUsic</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- <item name="android:actionBarStyle">@style/MyActionBar</item> -->
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/c_navajo_white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Header.TitleText" parent="android:TextAppearance.Holo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowColor">#8000</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="Header.SubTitleText" parent="Header.TitleText">
        <item name="android:textSize">16sp</item>
    </style>

</resources>