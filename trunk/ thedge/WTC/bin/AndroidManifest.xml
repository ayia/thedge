<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ytc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo_vevo"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ytc.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="Main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ytc.VideoView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.ytc.Yt_Video_player"
            android:label="@string/title_activity_yt__video_player"
             android:configChanges="orientation|screenSize"
             
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.ytc.SearchActivity"
            android:configChanges="orientation|screenSize"
            
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>